<!DOCTYPE html>
<html>
<head>
  <title>Event World</title>
  
  <style>
    .contents {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border: 2px solid black;
      padding: 15px;
      transition: .3s;
    }
    
    #generateButton {
      margin-top: 5px;
      margin-bottom: 15px;;
    }
    #incrementButton:hover {
        transform: scale(1.3);
        transition: .2s;
    }
  </style>
</head>
<body>
<div class="contents" align="center" hidden >
  <button id="incrementButton">Tekan Aku :)</button>
  <h3>Kamu sudah menekan tombol di atas sebanyak <span id="count">0</span></h3>
</div>
 
<script>
  const contents = document.querySelector('.contents');     // mengambil elemen dom class content

  function onLoad() {
    alert(`i hacked u. hahaha`);
    contents.removeAttribute('hidden');         // att hidden akan dihapus

  }
// elemen.{nama_event} = namaFunction();
  document.body.onload = onLoad();      // jalankan fungsi onload ketika body selesai load

  // counter
  const spanCount = document.getElementById('count');
const button = document.getElementById('incrementButton');
function counter() {
    spanCount.innerText ++;     // menambahkan angka ketika diklik
    if(spanCount.innerText == 10) {     // pengkondisian
        contents.style.backgroundColor='salmon';
        const hiddenMessage = document.createElement('h2');
        hiddenMessage.innerText = 'Selamat kamu tidak Menang!!';
        const hiddenImg = document.createElement('img');
        hiddenImg.setAttribute('src', 'https://th.bing.com/th/id/R.293f0d33501c4626acbc103c42ea7398?rik=URm%2f8ef6rFMryg&riu=http%3a%2f%2fsweetclipart.com%2fmultisite%2fsweetclipart%2ffiles%2fx_mark_red.png&ehk=utrI2tmHEaSnlZfeN1kZDkCvQc8ag7lxdPkXOA%2f0hZY%3d&risl=&pid=ImgRaw&r=0')
        hiddenImg.style.width = '70%'
        contents.appendChild(hiddenMessage).appendChild(hiddenImg);       // append child dan insert before mengunakn kurung 
    }
};

button.onclick = (counter);

</script>
</body>
</html>